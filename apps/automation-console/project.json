{
  "name": "automation-console",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/automation-console/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/apps/automation-console",
        "main": "apps/automation-console/src/index.ts",
        "tsConfig": "apps/automation-console/tsconfig.lib.json",
        "assets": [
          "apps/automation-console/*.md"
        ]
      }
    },
    "serve-server": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/automation-console",
        "command": "vite-node --config=vite.config.ts --root . src/app.ts"
      }
    }
  },
  "tags": []
}
