{
  "name": "example-app",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/example-app/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/apps/example-app",
        "main": "apps/example-app/src/app.ts",
        "tsConfig": "apps/example-app/tsconfig.lib.json",
        "assets": [
          "apps/example-app/*.md"
        ],
        "updateBuildableProjectDepsInPackageJson": true
      }
    },
    "package": {
      "executor": "@lionelhorn/nx-tools:package",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/apps/example-app"
      },
      "dependsOn": ["build"]
    },
    "install-dist-deps": {
      "executor": "@lionelhorn/nx-tools:install-dist-deps",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/apps/example-app"
      },
      "dependsOn": ["build"]
    },
    "serve-vite": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/example-app",
        "command": "vite-node --config=vite.config.ts --root . ./src/app.ts"
      }
    }
  },
  "tags": []
}
